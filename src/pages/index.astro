---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Feed from '../components/Feed.astro';
import Collections from '../components/Collections.astro';
import ThamizhiChat from '../components/ThamizhiChat.astro';
---

<Layout title="Journalism App">
  <Header />
  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 h-[calc(100vh-64px)]"> <!-- Adjust 64px based on your header height -->
    <div id="content" class="relative h-full">
      <Feed />
      <ThamizhiChat />
      <Collections />
    </div>
  </main>
</Layout>

<script>
  const menuItems = document.querySelectorAll('.menu-item');
  const contentSections = document.querySelectorAll('#content > *');

  menuItems.forEach(item => {
    item.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = item.getAttribute('href')?.substring(1) || '';
      
      menuItems.forEach(mi => mi.classList.remove('active'));
      item.classList.add('active');

      contentSections.forEach(section => {
        if (section instanceof HTMLElement) {
          section.style.display = section.id === targetId ? 'block' : 'none';
        }
      });
    });
  });

  // Show Feed by default
  const feedSection = document.getElementById('feed');
  if (feedSection instanceof HTMLElement) {
    feedSection.style.display = 'block';
  }
</script>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 100%;
    max-width: 1200px;
    color: #333;
    font-size: 20px;
    line-height: 1.6;
    height: calc(100vh - 64px); /* Adjust based on your header height */
  }
  #content {
    height: 100%;
  }
</style>
