---
import { Image } from 'astro:assets';
---

<header class="bg-white shadow">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <img src="/icons8-asterisk.svg" alt="Logo" class="h-8 w-auto" />
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <a href="#feed" class="border-indigo-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
            Feed
          </a>
          <a href="#ai-rag" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
            AI RAG
          </a>
          <a href="#collections" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
            Collections
          </a>
        </div>
      </div>
      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <!-- Add Google Sign-in button here -->
        <button type="button" class="bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium">
          Sign In
        </button>
      </div>
    </div>
  </nav>
</header>