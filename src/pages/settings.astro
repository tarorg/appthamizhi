---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { NhostClient } from '@nhost/nhost-js';

const nhost = new NhostClient({
  subdomain: 'vpgocetcazniqixfdeje',
  region: 'ap-southeast-1'
});
---

<Layout title="Settings - Journalism App">
  <Header />
  <main class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
          Settings
        </h1>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
          Manage your account and preferences
        </p>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">
              Theme
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <button id="theme-toggle" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-200">
                Toggle Dark Mode
              </button>
            </dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">
              Account
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <button id="sign-out" class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-colors duration-200">
                Sign Out
              </button>
            </dd>
          </div>
          <!-- Add more settings options here -->
        </dl>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { NhostClient } from '@nhost/nhost-js';

  const themeToggle = document.getElementById('theme-toggle');
  const signOutButton = document.getElementById('sign-out');
  const nhost = new NhostClient({
    subdomain: 'vpgocetcazniqixfdeje',
    region: 'ap-southeast-1'
  });

  // Theme toggle functionality
  themeToggle?.addEventListener('click', () => {
    document.body.classList.toggle('dark');
    localStorage.setItem('theme', document.body.classList.contains('dark') ? 'dark' : 'light');
    updateThemeButtonText();
  });

  function updateThemeButtonText() {
    if (themeToggle) {
      themeToggle.textContent = document.body.classList.contains('dark') ? 'Switch to Light Mode' : 'Switch to Dark Mode';
    }
  }

  // Sign out functionality
  signOutButton?.addEventListener('click', async () => {
    try {
      await nhost.auth.signOut();
      window.location.href = '/'; // Redirect to home page after sign out
    } catch (error) {
      console.error('Error signing out:', error);
    }
  });

  // Check and apply saved theme
  if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document.body.classList.add('dark');
  } else {
    document.body.classList.remove('dark');
  }
  updateThemeButtonText();

  // Add navigation functionality
  document.querySelectorAll('.nav-item').forEach(item => {
    item.addEventListener('click', (e) => {
      e.preventDefault();
      const href = item.getAttribute('href');
      if (href) {
        window.location.href = href;
      }
    });
  });
</script>